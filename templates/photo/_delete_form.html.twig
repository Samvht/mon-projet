
<form method="post" action="{{ path('app_photo_delete', {'id': photo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
    <button class="btn btn-outline-light" style="border:none; background:none;" title="Supprimer">
        <i class="bi bi-trash"></i>
    </button>
</form>
    

